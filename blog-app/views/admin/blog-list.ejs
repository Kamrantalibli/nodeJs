<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>

    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action=="edit") { %>
                    <div class="alert alert-success">
                        Blog number <%= blogid %> Updated.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-success">
                        Blog Created.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-danger">
                        Blog Deleted.
                    </div>
                <% } %>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Id</th>
                            <th style="width: 150px;">Image</th>
                            <th>Title</th>
                            <th>Kategory</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% blogs.forEach(blog => { %>
                            <tr>
                                <td>#<%= blog.dataValues.id %></td>
                                <td>
                                    <img src="/static/images/<%= blog.dataValues.image %>" class="img-fluid" alt="">
                                </td>
                                <td>
                                    <%= blog.dataValues.baslig %>
                                </td>
                                <td>
                                    <% blog.categories.forEach(category => { %>
                                      <p><%= category.name %></p>
                                    <% }) %>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/blogs/<%= blog.dataValues.id %>">Edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/blog/delete/<%= blog.dataValues.id %>">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>